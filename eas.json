{
  "cli": {
    "version": ">= 16.26.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "env": {
        "COMMIT_HASH": "$(git rev-parse --short HEAD)"
      }
    },
    "preview": {
      "distribution": "internal",
      "env": {
        "COMMIT_HASH": "$(git rev-parse --short HEAD)"
      }
    },
    "production": {
      "autoIncrement": true,
      "env": {
        "COMMIT_HASH": "$(git rev-parse --short HEAD)"
      }
    }
  },
  "submit": {
    "production": {}
  }
}
